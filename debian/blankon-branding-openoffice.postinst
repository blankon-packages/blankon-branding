#! /bin/sh
set -e

case "$1" in
  configure)
  if [ -f /usr/lib/openoffice/program/openintro_ubuntu_sun.bmp ]; then
    dpkg-divert --add --local --divert /usr/lib/openoffice/program/openintro_ubuntu_sun.bmp.divert --rename /usr/lib/openoffice/program/openintro_ubuntu_sun.bmp
    cp -a /usr/lib/openoffice/program/openintro_blankon_sun.bmp /usr/lib/openoffice/program/openintro_ubuntu_sun.bmp
    cp -a /etc/openoffice/sofficerc-blankon /etc/openoffice/sofficerc
  fi
  if [ -f /usr/lib/openoffice/program/openabout_ubuntu_sun.bmp ]; then
    dpkg-divert --add --local --divert /usr/lib/openoffice/program/openabout_ubuntu_sun.bmp.divert --rename /usr/lib/openoffice/program/openabout_ubuntu_sun.bmp
    cp -a /usr/lib/openoffice/program/openabout_blankon_sun.bmp /usr/lib/openoffice/program/openabout_ubuntu_sun.bmp
  fi
esac

exit 0

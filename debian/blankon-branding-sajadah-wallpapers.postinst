#! /bin/sh
set -e

case "$1" in
  configure)
  if [ -f /usr/share/backgrounds/contex/rote.xml ]; then
    dpkg-divert --add --local --divert /usr/share/backgrounds/contex/rote.xml.divert --rename /usr/share/backgrounds/contex/rote.xml
    cp -a /usr/share/backgrounds/contex/sajadah.xml /usr/share/backgrounds/contex/rote.xml
  fi
esac

exit 0

#! /bin/sh
set -e

case "$1" in
  configure)
  if [ -f /usr/share/exaile/data/images/splash.png ]; then
    dpkg-divert --add --local --divert /usr/share/exaile/data/images/splash.png.divert --rename /usr/share/exaile/data/images/splash.png
    cp -a /usr/share/exaile/data/images/splash-blankon.png /usr/share/exaile/data/images/splash.png
  fi
esac

exit 0

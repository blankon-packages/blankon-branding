#!/bin/sh
set -e

base_dir="/usr/share/checkbox/gtk/"

case "$1" in
  configure)
  if [ -d $base_dir ]; then
    find $base_dir -name 'blankon.*' | while read target; do \
      berkasasli="`echo $target | sed 's/-blankon//'`"; \
      dpkg-divert --add --local --divert $berkasasli.divert --rename $berkasasli
      cp -a $target $berkasasli
    done;
  fi
esac

exit 0
